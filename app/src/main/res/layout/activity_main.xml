<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/frame_bootom_nav"
            android:layout_below="@id/frame_toolbar"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/container_add_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/frame_bootom_nav"
            android:layout_below="@id/frame_toolbar"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/container_body_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/frame_bootom_nav"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/frame_bootom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="5dip">

        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container_overlap_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</FrameLayout>
